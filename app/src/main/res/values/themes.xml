<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TurkeyPharmaciesOnDuty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/base_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Window Action Bar Style -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/titillium_light</item>
    </style>

    <style name="TextDesc">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/titillium_light</item>

    </style>

    <style name="TextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/titillium_bold</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/titillium_regular</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/titillium_light</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:paddingEnd">@dimen/dp_24</item>
        <item name="android:paddingStart">@dimen/dp_24</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
    </style>

    <style name="Button.TransparentBackground" parent="Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/base_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nexa_light</item>
    </style>

    <style name="Button.RedBackground" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/oval_red_button</item>
    </style>
</resources>